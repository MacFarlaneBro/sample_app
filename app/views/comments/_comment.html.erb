<div class="hero-unit">
  <p>
    <strong> <%= comment.user.name %> </strong>
    <small> <%= comment.created_at %> </small>
  </p>
  
  <p>
    <%= comment.body %>
  </p>
  <% if signed_in? && (comment.user == current_user || user.admin?) %>
    <div class="pull-right">
      <%= link_to 'Edit', edit_post_comment_path(@post, comment) %> |
      <%= link_to 'Delete', [@post, comment], method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %>
    </div>
  <% end %>
</div>
